package Service;

import db.RecommendationDAO;
import model.Recommendation;

import java.sql.SQLException;
import java.util.List;

public class ChefService {
    private final RecommendationDAO recommendationDAO;

    public ChefService() {
        this.recommendationDAO = new RecommendationDAO();
    }

    public void recommendMenuItems(int chefId, List<Integer> menuIds, String recommendationDate) throws SQLException {
        for (int menuId : menuIds) {
            Recommendation recommendation = new Recommendation(chefId, menuId, recommendationDate);
            recommendationDAO.addRecommendation(recommendation);
        }
    }
}
